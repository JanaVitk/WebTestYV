@using WebTestYV.Models;
@model InputData
@{

    ViewData["Title"] = "Test Web";
    List<SelectListItem> PeriodList = new List<SelectListItem>();
    foreach (var value in Enum.GetValues(typeof(InputData.PeriodType)))
        PeriodList.Add(new SelectListItem { Value = value.ToString(), Text = value.ToString() });

}

<div class="container col-sm-9 col-md-8 col-lg-7 align-self-center">
    <h2>Введите значения для расчета</h2>
    <form asp-action="Index" asp-controller="Home" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">AccountId:</label>
                <input type="text" asp-for="AccountId" class="form-control" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label">Период</label>
                <select asp-for="Period" asp-items="PeriodList" class="form-control">
                    <option selected="selected" disabled="disabled">Выберите период</option>
                </select>
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Расчитать" class="btn btn-outline-dark"/>
            </div>
        </div>
    </form>
</div>

